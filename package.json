{
    "name": "solfegejs",
    "description": "The Solfege framework",
    "homepage": "http://solfegejs.com",
    "version": "3.1.2",
    "author": "neolao <contact@neolao.com>",
    "private": false,
    "repository": "https://github.com/solfegejs/solfege.git",
    "license": "MIT",
    "keywords": [
        "framework",
        "solfege",
        "symfony",
        "dependency",
        "injection"
    ],
    "files": [
        "lib"
    ],
    "main": "lib/index.js",
    "engines": {
        "node": ">= 9"
    },
    "dependencies": {
        "solfegejs-application": "^3.1.0",
        "solfegejs-cli": "^4.0.0",
        "solfegejs-configuration": "^2.2.0",
        "solfegejs-configuration-yaml-loader": "^1.0.1",
        "solfegejs-dependency-injection": "^2.2.0",
        "solfegejs-dependency-injection-debugger": "^1.0.0"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-preset-solfege": "^1.2.2",
        "chai": "^4.1.2",
        "co-mocha": "^1.2.1",
        "coveralls": "^3.0.1",
        "eslint": "^4.13.1",
        "eslint-plugin-solfege": "^1.0.4",
        "flow-bin": "^0.60.1",
        "mocha": "^5.2.0",
        "nyc": "^11.8.0",
        "watch": "^1.0.2"
    },
    "scripts": {
        "flow-stop": "flow stop",
        "flow-start": "flow start",
        "flow-restart": "flow stop --quiet && flow start --quiet",
        "prepare": "npm run build",
        "lint": "eslint --ext .js src",
        "test": "mocha --harmony --compilers js:babel-core/register --require co-mocha --recursive --reporter spec --bail",
        "coverage": "nyc --clean npm test",
        "coverage-check": "nyc --clean check-coverage npm test",
        "coveralls": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
        "prebuild": "npm run lint && npm run flow-restart && flow",
        "build": "babel --out-dir lib src --copy-files",
        "watch": "watch 'echo \"----------\"; npm run build --silent' ./src ./test",
        "example-build": "flow; babel --out-dir example/lib example/src --copy-files",
        "example-console": "node example/lib/console.js"
    },
    "babel": {
        "presets": [
            "solfege"
        ],
        "comments": false,
        "plugins": []
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended",
            "plugin:solfege/recommended"
        ]
    }
}
